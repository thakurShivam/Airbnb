<%-layout("/layouts/boilerplate") %>


<div class="row">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-8 offset-2">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input 
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Please enter username</div>
                  <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input 
                    name="email" 
                    id="email"
                    type="email" 
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Please enter your em@l </div>
                <div class="valid-feedback">Title looks vrygood!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input 
                    name="password" 
                    id="password"
                    type="password" 
                    class="form-control"
                    required
                     
                />
                <div class="invalid-feedback">Please enter pass*****d </div>
                <div class="valid-feedback">Title looks excellent!</div>
            </div>
            <button class="btn btn-dark">SignUp</button>
         </form>
    </div>
</div> 